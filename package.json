{
  "name": "@bancosatoshi/root",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bancosatoshi/web.git"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jest-dom": "^3.8.1",
    "eslint-plugin-jest-formatting": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.2",
    "eslint-plugin-unicorn": "^29.0.0"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "typed-scss-modules": "^4.1.1",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "./app/{src,cypress,storybook,scripts}/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --list-different --write"
    ],
    "./**/*.{json,scss}": [
      "prettier --list-different --write"
    ],
    "./app/src/**/*.module.scss": [
      "stylelint --fix",
      "tsm --ignore 'src/theme/*.scss' --exportType default --nameFormat none --implementation node-sass --aliasPrefixes./src src",
      "prettier --list-different --write",
      "git add **/*.module.scss.d.ts"
    ]
  }
}
